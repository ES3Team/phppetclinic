{% extends '::base.html.twig' %}

{% block title -%}Visit{% endblock %}

{% block body -%}
    <h1>Visit</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('d.m.Y') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('owner_show',{'id': entity.pet.owner.id}) }}">
            Back to the Owner
        </a>
    </li>
    <li>
        <a href="{{ path('visit_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
