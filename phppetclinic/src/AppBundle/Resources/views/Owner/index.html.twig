{% extends '::base.html.twig' %}

{% block title -%}{% trans %}owner.owner{% endtrans %}{% endblock %}

{% block body -%}
    <h1>{% trans %}owner.owner{% endtrans %}</h1>

    {# total items count #}
    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>{% trans %}owner.id{% endtrans %}</th>
                <th>{% trans %}owner.firstname{% endtrans %}</th>
                <th>{% trans %}owner.lastname{% endtrans %}</th>
                <th>{% trans %}owner.address{% endtrans %}</th>
                <th>{% trans %}owner.city{% endtrans %}</th>
                <th>{% trans %}owner.telephone{% endtrans %}</th>
                <th>{% trans %}actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('owner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.telephone }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('owner_show', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                            {% trans %}show{% endtrans %}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('owner_edit', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            {% trans %}edit{% endtrans %}
                        </a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

        <ul>
        <li>
            <a href="{{ path('owner_new') }}">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                {% trans %}owner.owner{% endtrans %} {% trans %}create.new{% endtrans %}
            </a>
        </li>
    </ul>
    {% endblock %}
