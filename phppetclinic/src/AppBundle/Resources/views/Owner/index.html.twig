{% extends '::base.html.twig' %}

{% block title -%}Owner{% endblock %}

{% block body -%}
    <h1>Owner list</h1>

    {# total items count #}
    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Address</th>
                <th>City</th>
                <th>Telephone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('owner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.telephone }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('owner_show', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span> show</a>
                    </li>
                    <li>
                        <a href="{{ path('owner_edit', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

        <ul>
        <li>
            <a href="{{ path('owner_new') }}">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Create a new Owner
            </a>
        </li>
    </ul>
    {% endblock %}
