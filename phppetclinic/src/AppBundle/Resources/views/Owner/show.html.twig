{% extends '::base.html.twig' %}

{% block title -%}{% trans %}owner.owner{% endtrans %}{% endblock %}

{% block body -%}
    <h1>{% trans %}owner.owner{% endtrans %}</h1>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}First name{% endtrans %}</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>{% trans %}Last name{% endtrans %}</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>{% trans %}Address{% endtrans %}</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>{% trans %}City{% endtrans %}</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>{% trans %}Telephone{% endtrans %}</th>
                <td>{{ entity.telephone }}</td>
            </tr>
            <tr>
                <th>Pets</th>
                <td>
                    <table class="table table-striped">
                    {% for pet in entity.pets %}
                        <tr><th>Pet.Id</th><td>{{ pet.id }}</td></tr>
                        <tr><th>Pet.Name</th><td>{{ pet.name }}</td></tr>
                        <tr><th>Pet.Birthdate</th><td>{{ pet.birthdate|date('d.m.Y') }}</td></tr>
                        <tr><th>Pet.PetType</th><td>{% if pet.petType %}{{ pet.petType.name }}{% endif %}</td></tr>
                        <tr>
                            <td>
                                <a href="{{ path('pet_edit', {'id': pet.id }) }}">
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                    {% trans %}pet.pet{% endtrans %} {% trans %}edit{% endtrans %}
                                </a>
                            </td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Visits</th>
                            <td>
                            <table class="record_properties table table-striped">
                        {% for visit in pet.visits %}
                            <tr>
                                <td>{{ visit.id }}</td>
                                <td>{{ visit.date|date('d.m.Y')  }}</td>
                                <td>{{ visit.description }}</td>
                            </tr>
                        {% endfor %}
                            </table>
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <a href="{{ path('visit_new4pet', {'id': pet.id }) }}">
                                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                                    {% trans %}add.visit{% endtrans %}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                        <tr>
                            <td>
                                <a href="{{ path('pet_new4owner', {'id': entity.id }) }}">
                                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                                    {% trans %}add.pet{% endtrans %}
                                </a>
                            </td>
                            <td></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('owner') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span> {% trans %}back.to.list{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('owner_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>{% trans %}owner.owner{% endtrans %}
            {% trans %}edit{% endtrans %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
