{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Owner</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ entity.telephone }}</td>
            </tr>
            <tr>
                <th>Pets</th>
                <td>
                    <table>
                    {% for pet in entity.pets %}
                        <tr><td>{{ pet.id }}</td></tr>
                        <tr><td>{{ pet.name }}</td></tr>
                        <tr><td>{{ pet.birthdate|date('d.m.Y') }}</td></tr>
                        <tr><td>{% if pet.petType %}{{ pet.petType.name }}{% endif %}</td></tr>
                    {% endfor %}
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('owner') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('owner_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
