{% extends '::base.html.twig' %}

{% block title -%}Vet{% endblock %}

{% block body -%}
    <h1>Vet list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Specialties</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vet_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{% for specialty in entity.specialties %}{{ specialty }} {% endfor %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('vet_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('vet_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vet_new') }}">
                Create a new Vet
            </a>
        </li>
    </ul>
    {% endblock %}
