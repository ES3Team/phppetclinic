{% extends '::base.html.twig' %}

{% block title -%}Specialty{% endblock %}

{% block body -%}
    <h1>Specialty</h1>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('specialty') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span> Back to the Specialty list
        </a>
    </li>
    <li>
        <a href="{{ path('specialty_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
