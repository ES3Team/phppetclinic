{% extends '::base.html.twig' %}

{% block title -%}Pet{% endblock %}

{% block body -%}
    <h1>Pet list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Birthdate</th>
                <th>PetType</th>
                <th>Owner</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pet_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('d.m.Y') }}{% endif %}</td>
                <td>{% if entity.petType %}{{ entity.petType.name }}{% endif %}</td>
                <td>{% if entity.owner %}{{ entity.owner.firstName }} {{ entity.owner.lastName }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pet_show', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span> show</a>
                    </li>
                    <li>
                        <a href="{{ path('pet_edit', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pet_new') }}">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Create a new Pet
            </a>
        </li>
    </ul>
    {% endblock %}
