{% extends '::base.html.twig' %}

{% block title -%}{% trans %}pet.pet{% endtrans %}{% endblock %}

{% block body -%}
    <h1>Pet</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ entity.birthdate|date('d.m.Y') }}</td>
            </tr>
            <tr>
                <th>PetType</th>
                <td>{% if entity.petType %}{{ entity.petType.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{% if entity.owner %}{{ entity.owner.firstName }} {{ entity.owner.lastName }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path('owner_show',{ 'id': entity.owner.id }) }}">
                    <span class="glyphicon glyphicon-backward" aria-hidden="true"></span> To the Owner
                </a>
            </li>
    <li>
        <a href="{{ path('pet') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span> To the Pet list
        </a>
    </li>
    <li>
        <a href="{{ path('pet_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> {% trans %}edit{% endtrans %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
